<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Your Foster Animal Catalog</h1>

<% @pets.each do |pet| %>
  <div class="entry">
    <%= image_tag(pet.image_url) %>
    <h3><%= pet.name %></h3>
    <h4><%= pet.breed %></h4>
    <h4><%= pet.age %> year<% if pet.age > 1 %>s<% end %> old.</h4>
    <%= sanitize(pet.description) %>
    <%= button_to 'Adopt Pet', adoption_agreements_path(pet_id: pet); %>

  </div>
<% end %>
